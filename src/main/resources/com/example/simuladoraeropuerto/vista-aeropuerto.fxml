<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="com.example.simuladoraeropuerto.controllers.MainController" xmlns:fx="http://javafx.com/fxml" spacing="20">
    <AnchorPane fx:id="airportArea" minHeight="100.0" style="-fx-background-color: sandybrown;">
        <Label text="Entrada del Aeropuerto" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
    </AnchorPane>


    <AnchorPane fx:id="controlPasaportesArea" minHeight="150.0" style="-fx-background-color: lightblue;">
        <Label text="Control de Pasaportes" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
        <!-- Aquí puedes añadir más elementos para las cabinas -->
    </AnchorPane>

    <AnchorPane minHeight="150.0" style="-fx-background-color: beige;">
        <Label text="Manejo de Equipaje" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
        <!-- Elementos para representar la cinta de equipaje -->
    </AnchorPane>

    <AnchorPane minHeight="150.0" style="-fx-background-color: lightgreen;">
        <Label text="Zona de Espera" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
    </AnchorPane>

    <AnchorPane minHeight="150.0" style="-fx-background-color: grey;">
        <Label text="Área de Salida" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0"/>
    </AnchorPane>
</VBox>
